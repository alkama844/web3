# Gmail API OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com
CLIENT_ID=your-google-client-id
CLIENT_SECRET=your-google-client-secret
REFRESH_TOKEN=your-refresh-token
REDIRECT_URI=https://developers.google.com/oauthplayground
TO_EMAIL=destination@email.com

# CORS Configuration - Set to your frontend domain or * for unlimited access
FRONTEND_DOMAIN=*

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging Configuration (optional)
LOG_LEVEL=info

# Rate Limiting Configuration (set to 0 for unlimited)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=0
FORM_RATE_LIMIT_WINDOW_MS=600000
FORM_RATE_LIMIT_MAX_REQUESTS=0

# Security Settings
ENABLE_RATE_LIMITING=false
ENABLE_STRICT_CORS=false